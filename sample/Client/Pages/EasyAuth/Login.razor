@page "/login"
@using Laurentiu.Azure.AppService.EasyAuth

<main>
    <div class="container-xl px-4">
        <div class="row justify-content-center">
            <div class="col-xl-5 col-lg-6 col-md-8 col-sm-11 mt-15">
                <!-- Social login form-->
                <div class="card my-5">
                    <div class="card-body p-5 text-center">
                        <div class="h3 fw-light mb-3">Sign In</div>
                        <!-- Social login links-->
                        <button class="btn btn-icon btn-github mx-1" @onclick="() => BeginLogIn(AppServiceEasyAuthProviderType.Github)">Sign in with GitHub</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>